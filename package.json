{
  "name": "Critique",
  "version": "1.0.0-pre-alpha",
  "description": "An application that helps you easily create critical CSS for your webpages.",
  "author": "Matthijs Ewoud van Loon",
  "main": "main.js",
  "watch": {
    "compile": "style.sass"
  },
  "scripts": {
    "start": "electron --inspect=5858 .",
    "dev": "webpack-dev-server --port 1234",
    "watch": "npm-watch compile",
    "build": "webpack",
    "test": "node tests/main.js",
    "dist-all": "electron-builder --dir -mwl",
    "dist-mac": "electron-builder --dir -m",
    "dist": "electron-builder --dir -mw"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:CritiqueApp/Critique.git"
  },
  "keywords": [
    "critical-css",
    "criticalcss",
    "penthouse",
    "electron"
  ],
  "author": "Matthijs Ewoud van Loon",
  "license": "MIT",
  "homepage": "https://bitbucket.org/leobite/critique-app#readme",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-react": "^6.24.1",
    "electron-builder": "^19.49.2",
    "node-sass": "^4.7.2",
    "npm-watch": "^0.3.0",
    "react-feather": "^1.0.7",
    "spectre.css": "^0.5.0",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.7",
    "electron": "^1.8.1"
  },
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "penthouse": "^1.3.0",
    "sass.js": "^0.10.7"
  },
  "build": {
    "appId": "com.critique.app"
  }
}
